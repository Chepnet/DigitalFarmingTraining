@model WebApplication2.Models.TrainingApplication

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to the training application form</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
